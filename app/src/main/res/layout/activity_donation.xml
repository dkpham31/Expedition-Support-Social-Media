<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Donation">
    
    
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="@drawable/loginpage2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="9">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/donateUS"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_weight="0.8"
            android:text="Donate Us" />
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_weight="0.7"
            android:text="Your Support help us to have more amazing journey in the future!" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textStyle="bold"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:layout_weight="0.7"
            android:hint="Your amount" />
        <TextView
            android:id="@+id/paywith"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_weight="0.5"
            android:text="Pay with" />

        <ImageView
            android:id="@+id/payPal_pay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:scaleType="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_login_button"
            app:srcCompat="@drawable/paypal" />

        <TextView
            android:id="@+id/selection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_weight="0.5"
            android:text="________ or pay with ________" />

        <ImageView
            android:id="@+id/creditCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="0.5"
            android:background="@drawable/custom_login_button"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/card"
            android:onClick="OpenDonate"/>



    </LinearLayout>

</RelativeLayout>